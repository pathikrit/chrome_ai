{
  "manifest_version": 3,
  "name": "Chrome AI",
  "version": "0.0.1",
  "action": {
    "default_popup": "index.html?mode=popup",
    "default_icon": "chrome_ai.png"
  },
  "options_ui": {
    "page": "index.html?mode=options",
    "open_in_tab": false
  },
  "permissions": ["tabs", "activeTab", "scripting", "storage"],
  "host_permissions": ["<all_urls>"]
}
